@variables {
    # Colors
    bg_color: "#0D1117"
    primary_text: "#E6EDF3"
    secondary_text: "#8B949E"
    accent_color: "#00A8FF"
    accent_hover: "#008fdb"
    border_color: "#30363D"
    card_bg: "#161B22"
    code_bg: "#010409"
    white: "#FFFFFF"
    
    # Fonts
    main_font: "Inter"
    code_font: "JetBrains Mono"
    
    # Spacing
    spacing_xs: 4
    spacing_sm: 8
    spacing_md: 16
    spacing_lg: 24
    spacing_xl: 32
    spacing_xxl: 48
    spacing_xxxl: 60
    
    # Sizing
    header_height: 70
    hero_padding: 120
    section_padding: 100
    container_width: 1200
    
    # Content
    site_title: "Kryon Labs - The Universal UI Compiler"
    hero_title: "Build Once. Deploy Natively. Everywhere."
    hero_subtitle: "Kryon is a declarative UI framework that compiles your apps into an ultra-compact binary format for unparalleled performance on desktop, mobile, web, and embedded systems."
}

App {
